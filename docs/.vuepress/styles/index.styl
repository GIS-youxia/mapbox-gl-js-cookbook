// 图例
.legend
  position: absolute;
  right: 10px;
  bottom: 38px;
  padding: 3px 8px;
  border-radius: 4px;
  background-color: rgba(0, 0, 0, 0.5);
  font-size: 12px;
  font-weight: bold;
  box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.1);
  &-item
    padding: 3px 0;
    .circle, .square
      display: inline-block;
      width: 10px;
      height: 10px;
      margin-right: 2px;
    .circle
      border-radius: 50%;
    .text
      color: #2c3e50;
